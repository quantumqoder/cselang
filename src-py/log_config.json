{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "simple": {
            "format": "%(levelname)s - %(message)s"
        },
        "verbose": {
            "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
        },
        "detailed": {
            "format": "%(asctime)s - %(name)s - %(lineno)d - %(levelname)s - %(message)s",
            "datefmt": "%Y-%m-%d %H:%M:%S%z"
        },
        "json": {
            "()": "log_utils.JSONFormatter",
            "fmt_keys": {
                "at": "timestamp",
                "level": "levelname",
                "logger": "name",
                "thread": "threadName",
                "file": "filename",
                "function": "funcName",
                "lineno": "lineno",
                "message": "message"
            }
        }
    },
    "filters": {
        "no_error": {
            "()": "log_utils.NonErrorFilter"
        }
    },
    "handlers": {
        "error": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "WARNING",
            "formatter": "json",
            "filename": "./src-py/logs/error.log.jsonl",
            "maxBytes": 10000,
            "backupCount": 3
        },
        "file": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "INFO",
            "formatter": "detailed",
            "filename": "./src-py/logs/cse.log",
            "maxBytes": 10000,
            "backupCount": 3
        },
        "debug": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "DEBUG",
            "formatter": "json",
            "filename": "./src-py/logs/debug.log.jsonl",
            "filters": [
                "no_error"
            ]
        },
        "queue_handler": {
            "class": "logging.handlers.QueueHandler",
            "handlers": [
                "error",
                "file",
                "debug"
            ],
            "respect_handler_level": true
        }
    },
    "loggers": {
        "root": {
            "handlers": [
                "queue_handler"
            ],
            "level": "DEBUG"
        }
    }
}